---
import BaseHead from '../../components/BaseHead.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import { getCollection } from 'astro:content'
import FormattedDate from '../../components/FormattedDate.astro'

const recipes = (await getCollection('recipes')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
)
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Recipes" description="Recipes Home" />
    <style>
      :global(body) {
        background: var(--bg-light);
      }

      main {
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding: 2rem 1.5rem 4rem;
        background: var(--bg-light);
      }

      .hero-image {
        width: 100%;
        aspect-ratio: 2 / 1;
        overflow: hidden;
        margin-bottom: 1em;
        border-radius: 12px;
        box-shadow: none;
        transition: box-shadow 0.2s ease;
      }

      /* apply shadow to the wrapper on hover */
      ul li a:hover .hero-image {
        box-shadow: var(--box-shadow);
      }

      .hero-image img {
        width: 100%;
        height: 100%;
        display: block;
        object-fit: cover;
        object-position: 50% 50%;
        border-radius: 0;
        box-shadow: none;
      }

      ul {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        list-style-type: none;
        margin: 0 auto;
        padding: 0;
      }

      ul li {
        width: min(360px, 100%);
      }

      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
        color: var(--text);
      }

      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }

      ul li a {
        display: block;
      }

      .title {
        margin: 0;
        color: var(--text);
        line-height: 1;
      }

      .date {
        margin: 0;
        color: var(--text);
      }

      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }

      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
          justify-content: center;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <ul>
          {
            recipes.map((recipe) => (
              <li>
                <a href={`/recipes/${recipe.id}/`}>
                  <div class="hero-image">
                    <img src={recipe.data.heroImage} alt="" />
                  </div>
                  <h4 class="title">{recipe.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={recipe.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
